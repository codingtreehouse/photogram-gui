<h1>List of photos</h1>

<hr>

<form action="/insert_photo">
  <label for="url">Image</label>
  <input id="url" type="text" name="query_image" placeholder="Enter a URL for the image...">

  <label for="caption">Caption</label>
  <textarea id="caption" type="text" name="query_caption" placeholder="Enter a caption for the photo..."></textarea>

  <label for="owner">Owner ID</label>
  <input id="owner" type="integer" name="query_owner" placeholder="Enter an ID of a User">
  <button>Add photo</button>
</form>


<table border ="1">
 <tr>
    <th>Image</th>
    <th>Caption</th>
    <th>Owner</th>
    <th>Posted</th>
    <th></th>
  </tr>
  <% @list_of_photos.each do |a_photo|%>
  <tr>
    <td>
      <img src="https://robohash.org/<%= a_photo.id%>">
    </td>

    <td>
      <%= a_photo.caption%> 
    </td>

    <td>
      <%= a_photo.poster.username%> 
    </td>

    <td>
      <%= a_photo.created_at%> 
    </td>

    <td>
      <a href="/photos/<%= a_photo.id%>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
