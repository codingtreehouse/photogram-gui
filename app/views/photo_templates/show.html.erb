<h2>Comments</h2>

<table border="0">
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
    <th>Posted</th>
  </tr>
  
  <% @the_photo.comments.each do |a_photo| %>
  <tr>
    <td><%= a_photo.commenter%></td>
    <td><%= a_photo.comment%></td>
    <td><%= a_photo.created_at%></td>
  </tr>
  <% end %>
